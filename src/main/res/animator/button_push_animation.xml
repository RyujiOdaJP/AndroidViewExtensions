<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_enabled="true">
        <set>
            <objectAnimator
                android:duration="20"
                android:propertyName="scaleX"
                android:valueTo="0.85" />
            <objectAnimator
                android:startOffset="21"
                android:repeatMode="reverse"
                android:repeatCount="1"
                android:propertyName="scaleX"
                android:valueTo="0.9" />
            <objectAnimator
                android:duration="20"
                android:propertyName="scaleY"
                android:valueTo="0.85" />
            <objectAnimator
                android:startOffset="21"
                android:repeatMode="reverse"
                android:repeatCount="1"
                android:propertyName="scaleY"
                android:valueTo="0.9" />
        </set>
    </item>
    <item>
        <set>
            <objectAnimator
                android:duration="20"
                android:propertyName="scaleX"
                android:valueTo="1" />
            <objectAnimator
                android:duration="20"
                android:propertyName="scaleY"
                android:valueTo="1" />
        </set>
    </item>
</selector>